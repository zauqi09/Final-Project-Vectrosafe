<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_marginEnd="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_bg3"
        android:backgroundTint="#FFC107" >
        <TextView
            android:id="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:text="VectroSafe. Powered By BTPNS"
            android:layout_marginLeft="50dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_marginEnd="120dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_bg4"
        android:backgroundTint="#5C607A" >
        <ImageView
            android:id="@+id/tv_back_profile"
            android:backgroundTint="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_toEndOf="@id/tv_back_profile"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp"
            android:text="Vectro Safe"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_centerbar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/view3">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:backgroundTint="#FF9800"
            android:layout_toLeftOf="@id/view6"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_bg">

            <View
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="#00BCD4"
                android:background="@drawable/round_bgtop"/>
            <View
                android:orientation="horizontal"
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_bg3"
                android:backgroundTint="#FFC107" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/text1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="Username"/>

                    <TextView
                        android:id="@+id/tv_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_below="@id/tv_text1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="Nama"/>

                    <TextView
                        android:id="@+id/tv_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_text2"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="Tanggal Lahir"/>

                    <TextView
                        android:id="@+id/tv_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_text3"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="No Rekening"/>

                    <TextView
                        android:id="@+id/tv_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_text4"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="No HP"/>

                    <TextView
                        android:id="@+id/tv_text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_text5"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="Alamat"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="null"/>

                    <TextView
                        android:id="@+id/tv_nama_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_below="@id/tv_user_profile"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="null"/>

                    <TextView
                        android:id="@+id/tv_no_rekening_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_tgl_lahir_profile"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="null"/>

                    <TextView
                        android:id="@+id/tv_no_hp_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_no_rekening_profile"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="null"/>

                    <TextView
                        android:id="@+id/tv_alamat_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_no_hp_profile"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="null"/>

                    <TextView
                        android:id="@+id/tv_tgl_lahir_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nama_profile"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:text="null"/>
                </RelativeLayout>
                
            </LinearLayout>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@id/text1"
                android:backgroundTint="@color/white"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_supervisor_account_24"
                />


            <Button
                android:id="@+id/bt_logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:background="@drawable/round_bg"
                android:text="Logout"
                app:backgroundTint="#00BCD4" />
        </RelativeLayout>
        <View
            android:id="@+id/view6"
            android:layout_width="30dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_botleftt"
            android:backgroundTint="#00BCD4" />
    </RelativeLayout>


</RelativeLayout>