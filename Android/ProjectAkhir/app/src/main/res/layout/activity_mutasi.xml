<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:background="@drawable/round_bg3"
        android:backgroundTint="#FFC107">

        <TextView
            android:id="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="50dp"
            android:text="VectroSafe. Powered By BTPNS"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="120dp"
        android:background="@drawable/round_bg4"
        android:backgroundTint="#5C607A">
        <ImageView
            android:id="@+id/tv_back_mutasi"
            android:backgroundTint="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_toEndOf="@id/tv_back_mutasi"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp"
            android:text="Vectro Safe"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_centerbar"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/view3">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/view6"
            android:background="@drawable/round_bg_strokes"
            android:backgroundTint="#FF9800">
            <View
                android:id="@+id/view_cyan"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="#00BCD4"
                android:background="@drawable/round_bgtop"/>
            <LinearLayout
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:background="@drawable/round_bg3"
                android:backgroundTint="#FFC107"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tv_history_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:textColor="@color/white"
                android:text="History Transaksi"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/tv_history_transaksi"
                android:background="@drawable/ic_baseline_history_24"
                app:backgroundTint="@color/white"/>

            <LinearLayout
                android:id="@+id/Ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_history_transaksi"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_tgl_awal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:hint="Tanggal awal" />
                <Button
                    android:id="@+id/bt_tglawal"
                    android:text="Tanggal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bg"
                    app:backgroundTint="#00BCD4"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Ll_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ll_date"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/et_tgl_akhir"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:inputType="number"
                    android:hint="Tanggal awal" />
                <Button
                    android:id="@+id/bt_tgl_akhir"
                    android:text="Tanggal"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bg"
                    app:backgroundTint="#00BCD4"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/submit_mutasi"
                android:text="Submit"
                android:layout_below="@+id/Ll_date1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_bg"
                app:backgroundTint="#00BCD4"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:id="@+id/transaksiL2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/bg_strokes3"
                android:layout_below="@id/submit_mutasi"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/no_transaksi2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:singleLine="true"
                    android:text="no_transaksi"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_tipe2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="Tipe"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_mutasi2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Mutasi"
                    android:layout_marginRight="4dp"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_saldo2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="Saldo"
                    android:layout_marginRight="4dp"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_waktu2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:layout_marginRight="4dp"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/tv_keterangan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:layout_marginRight="4dp"
                    android:textSize="11sp" />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/TrxRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="60dp"
                android:layout_below="@+id/transaksiL2"
                />


        </RelativeLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="30dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_botleftt"
            android:backgroundTint="#00BCD4" />
    </RelativeLayout>


</RelativeLayout>