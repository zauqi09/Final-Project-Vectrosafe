<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3F51B5"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/round_bg2"
        android:backgroundTint="#FF9800"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_bg3"
        android:backgroundTint="#FF9800"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_centerInParent="true">

       <TextView
           android:id="@+id/tv_loginwith"
           android:layout_width="wrap_content"
           android:text="Login with Number Phone"
           android:textColor="@color/white"
           android:textSize="25dp"
           android:layout_marginBottom="30dp"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true" />

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/et_no_hp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textAlignment="center"
           android:textSize="16dp"
           android:layout_below="@id/tv_loginwith"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="20dp"
           android:inputType="number"
           android:hint="Phone Number"/>
       <com.google.android.material.button.MaterialButton
           android:id="@+id/bt_login"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/et_no_hp"
           android:paddingStart="50dp"
           android:paddingEnd="50dp"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="10dp"
           android:textStyle="bold"
           android:text="Sign In"
           android:background="#FF9800"
           android:textSize="18sp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:textAllCaps="false"/>
   </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyPhone. Powered By BTPNS"
        android:textSize="11dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>